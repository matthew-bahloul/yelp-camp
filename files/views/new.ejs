<% include partials/header %>

<div class="container">
    <div class="row" style="text-align: center">
        <h1>Create a New Campground</h1>
        <div style="width:30%; margin: 3em auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control well" type="text" name="name" placeholder="name">
            </div> 
            
            <div class="form-group">
                <input class="form-control well" type="text" name="image" placeholder="image url">
            </div> 

            <div class="form-group">
                <input class="form-control well" type="text" name="description" placeholder="description">
            </div> 

            <div class="form-group">
                    <input class="form-control well" type="number" name="price" placeholder="daily price" min=".00", step="1.00">
            </div> 

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div> 
        </form>

        <a href="/campgrounds" style="align-self: left">Go Back</a>

    </div>
    </div>


</div>

<% include partials/footer %>